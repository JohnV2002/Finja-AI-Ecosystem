{
  "input_path": "../Spotify - Get Content/nowplaying_spotify.txt",
  "fixed_outputs": "../Spotify - Get Content/outputs",
  "interval_s": 2.0,
  "init_write": true,

  "genres_template": "Pop • Nightcore • Speed Up",
  "react_template": "OMG NICE",
  "genres_fallback": "Neuer Song :) hören wir mal rein",
  "genres_joiner": " • ",

  "songs_kb_path": "SongsDB/songs_kb.json",
  "kb_index_cache_path": "cache/kb_index.pkl",
  "log_every_tick": false,

  "sync_guard": {
    "enabled": true,
    "settle_ms": 200,
    "retries": 3
  },

  "debug_probe": {
    "enabled": true,
    "kb_probe_path": "kb_probe.py",
    "open_console": false,
    "use_idx": false
  },

  "missing_log": {
    "enabled": true,
    "path": "missingsongs/missing_songs_log.jsonl",
    "log_on_init": false,
    "dedupe_hours": 12,
    "state_path": "missingsongs/.missing_seen.json"
  },

  "artist_not_sure": {
    "enabled": true,
    "path": "missingsongs/artist_not_sure.jsonl",
    "state_path": "missingsongs/.artist_not_sure_seen.json",
    "dedupe_hours": 24
  },

  "reactions": {
    "enabled": true,
    "path": "Memory/reactions.json",
    "mode": "score",
    "seed": 1337,
    "cooldown_s": 45,
    "debug": true,
    "include_genres": false,
    "context": {
      "enabled": true,
      "path": "Memory/contexts.json",
      "refresh_s": 5
    },
    "listening": {
      "enabled": true,
      "text": "Listening…",
      "delay_s": 50,
      "random_delay": {
        "min_s": 40,
        "max_s": 60
      },
      "mid_texts": [
        "Deep listening…",
        "Vibing…",
        "Analyzing…"
      ],
      "mid_switch_after_s": 45
    }
  },

  "memory": {
    "enabled": true,
    "path": "Memory/memory.json",
    "min_confidence": 2,
    "decay": {
      "enabled": true,
      "half_life_days": 90,
      "floor": 0.0
    },
    "tuning": {
      "min_seen_for_repeat": 2,
      "min_seen_for_cross_context": 2,
      "confidence_margin": 0.75,
      "suppress_cross_if_dislike": true,
      "suppress_cross_if_tie": true,
      "show_fits_here_even_if_small": true,
      "max_tail_segments": 2
    }
  },

  "show_special_version_in_genres": true,
  "special_version_prefix": "",
  "special_version_tags": {
    "nightcore": ["nightcore"],
    "speed up": ["speed up", "sped up", "speedup"],
    "tiktok": ["tiktok", "tik tok"],
    "radio edit": ["radio edit", "radio mix"],
    "slowed + reverb": ["slowed + reverb", "slowed & reverb", "slowed reverb", "slow + reverb"],
    "slowed": ["slowed", "slowed down"],
    "reverb": ["reverb"],
    "bass boosted": ["bass boosted", "bass-boosted", "bassboosted"],
    "remix": ["remix", "remixed", "rmx"],
    "daycore": ["daycore", "day core", "day-core"],
    "updraft": ["updraft", "up draft", "up-draft"],
    "upcore": ["upcore", "up core", "up-core"],
    "breakcore": ["breakcore", "break core", "break-core"]
  }
}
